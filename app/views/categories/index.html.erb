<div class="container w-3/5 bg-gray-400 mx-auto pt-4 h-screen space-y-4 px-3">
  <div class="container w-full space-y-2">
    <h1 class="text-5xl font-bold">This is the Categories Index Page</h1>
    <p class="text-xl">Create a new task by clicking an existing Category, or create a new one.</p>
  </div>

  <button class="bg-blue-500 px-4 py-2 font-semibold text-white rounded hover:bg-blue-600 text-2xl">
    <%= link_to "New Category" , new_category_path %>
  </button>

  <div class="container w-full grid grid-cols-3 gap-3">
    <% @categories.each do |category| %>
      <div class="bg-gray-200 p-2 border-solid border-2 border-black">
        <h3 class="text-2xl font-semibold">
          <%= link_to category.name, category_tasks_path(category) %>
        </h3>
        <p>
          <%= category.description %>
        </p>
        <p class="text-right mt-4"> Pending tasks:
          <%= category.tasks.count %>
        </p>
      </div>
    <% end %>
  </div>

</div>