<h1>Categories#index</h1>

<% @categories.each do |category| %>
  <div>
    <h3>
      <%= link_to category.name, category_tasks_path(category) %>
    </h3>
    <p>
      <%= category.description %>
    </p>
    <p> Number of remaining tasks:
      <%= category.tasks.count %>
    </p>
  </div>
  <% end %>

