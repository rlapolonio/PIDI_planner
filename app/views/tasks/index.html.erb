<div class="container w-3/5 bg-gray-400 mx-auto pt-4 h-screen space-y-4  px-3">
  <div class="container w-full space-y-2">
    <h1 class="text-5xl font-bold">This is the New Category_Tasks Page</h1>
    <p class="text-xl pl-2">This shows Category details and actions, and all Tasks under it.</p>
  </div>

  <div class="container w-full space-y-2">
    <h1 class="text-4xl font-semibold">
      <%= @category.name %>
    </h1>
    <p class="text-xl pl-2">
      <%= @category.description %>
    </p>
  </div>

  <div class="container w-full">
    <%= link_to "Edit" , edit_category_path(@category), class: "bg-blue-500 px-4 py-2 font-semibold text-white rounded hover:bg-blue-600 text-lg" %>
    <%= link_to "Back" , categories_path, class: "bg-blue-500 px-4 py-2 font-semibold text-white rounded hover:bg-blue-600 text-lg" %>
    <%= link_to "Delete" , category_path(@category), class: "bg-blue-500 px-4 py-2 font-semibold text-white rounded hover:bg-blue-600 text-lg" , method: :delete, data: {
          confirm: "Are you sure?" } %>
  </div>

  <div class="container w-full">
    <%= link_to "Add New Task" , new_category_task_path(@category), class: "bg-blue-500 px-4 py-2 font-semibold text-white rounded hover:bg-blue-600 text-xl" %>
  </div>
  
  <div class="container w-full grid grid-cols-4 gap-3">
    <% @tasks.each do |task| %>
      <div class="bg-gray-200 p-2 border-solid border-2 border-black">
        <h3 class="text-2xl font-semibold">
          <%= link_to task.name, category_task_path(@category, task) %>
        </h3>
        <p>
          <%= task.description %>
        </p>

        <p>
          <%= task.deadline.to_date %>
        </p>
      </div>
    <% end %>


  </div>





</div>

