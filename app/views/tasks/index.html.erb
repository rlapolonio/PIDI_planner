<h1>Category_tasks#index</h1>

<h1>
  <%= @category.name %>
</h1>
<p>
  <%= @category.description %>
</p>

<%= link_to "Edit" , edit_category_path(@category), class: "btn btn-primary" %>
  <%= link_to "Back" , categories_path, class: "btn btn-secondary" %>
    <%= link_to "Delete" , category_path(@category), class: "btn btn-danger" , method: :delete, data: {
      confirm: "Are you sure?" } %>

<% @tasks.each do |task| %>
  <div>
    <h3>
      <%= link_to task.name, category_task_path(@category, task) %>
    </h3>
    <p>
      <%= task.description %>
    </p>

    <p>
      <%= task.deadline.to_date %>
    </p>
  </div>
  <% end %>

  <%= link_to "Add New Task" , new_category_task_path(@category) %>

