<%= form_with model: [@category, @task] do |f| %>

  <div class="container w-full">
    <% if @task.errors.any? %>
      <h4 class="text-2xl font-semibold">Operation failed</h4>
      <p>Please check the following error(s):</p>
      <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li class="list-disc list-inside pl-4">
            <%= message %>
          </li>
          <% end %>
      </ul>
    <% end %>
  </div>

  <div class="container w-full space-y-3 mt-4">
    <div class="container inline-flex w-full items-center">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-input w-96 ml-2" %>
    </div>
    <div class="container inline-flex w-full items-center">
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-input w-96 ml-2", placeholder: "(Optional)" %>
    </div>
    <div class="container inline-flex w-full items-center">
      <%= f.label :deadline%>
      <%= f.datetime_local_field :deadline, class: "form-input w-96 ml-2", placeholder: "(Optional)" %>
    </div>
    <%= f.submit class: "bg-blue-500 px-4 py-2 font-semibold text-white rounded hover:bg-blue-600 text-xl" %>

  </div>
  
<% end %>